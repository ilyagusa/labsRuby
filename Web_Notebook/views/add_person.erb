<h2>Добавление счёта в общий список</h2>
<form method="post">
  <div class="form-row">
    <div class="form-group col-md-4">
      <label for="surname">Фамилия</label>
      <input type="text" class="form-control" id="surname" name="surname" placeholder="Фамилия">
      <% if @errors %>
        <%= @errors[:space_surname] %>
      <% end %>
    </div>
    <div class="form-group col-md-4">
      <label for="name">Имя</label>
      <input type="text" class="form-control" id="name" name="name" placeholder="Имя">
      <% if @errors %>
        <%= @errors[:space_name] %>
      <% end %>
    </div>
    <div class="form-group col-md-4">
    <label for="patronymic">Отчество</label>
    <input type="text" class="form-control" id="patronymic" name="patronymic" placeholder="Отчество">
    <% if @errors %>
        <%= @errors[:space_patronymic] %>
      <% end %>
  </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="street">Улица</label>
      <input type="text" class="form-control" id="street" name="street" placeholder="Улица">
      <% if @errors %>
        <%= @errors[:space_street] %>
      <% end %>
    </div> 
    <div class="form-group col-md-6">
      <label for="house">Дом</label>
      <input type="number" class="form-control" id="house" name="house" placeholder="Дом">
      <% if @errors %>
        <%= @errors[:negative_house] %>
      <% end %>
    </div>  
    </div>  
    
  <div class="form-row">
  <div class="form-group col-md-4">
