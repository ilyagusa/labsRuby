<% if @errors %>
<div class="alert alert-warning">
  <p>Ошибка!</p>
  <% @errors.each do |error| %>
    <p><%= error %></p>
  <% end %>
</div>
<% end %>

<form method="post">
  <div class="form-group">
    <label for="name">Название предмета</label>
    <input type="text" class="form-control" id="name" name="name" placeholder="Введите название предмета" value="<%= @mark[:name] %>">
  </div>
  <div class="form-group">
    <label for="mark">Оценка по предмету</label>
    <input type="number" class="form-control" id="mark" name="mark" placeholder="Введите оценку" value="<%= @mark[:value] %>">
  </div>
  <button type="submit" class="btn btn-primary">Добавить</button>
</form>
